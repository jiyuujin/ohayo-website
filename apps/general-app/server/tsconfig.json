{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "types": ["@types/google-apps-script", "@types/node"],
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "../node_modules",
    "dist"
  ]
}
